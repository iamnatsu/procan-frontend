{
  "version": "3.1.0",
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "outDir": "./app/scripts/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./types/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["app/src/*"]
    },
    "types": [
      "history",
      "immutable",
      "material-ui",
      "prop-types",
      "react",
      "react-dom",
      "react-redux",
      "react-router",
      "react-router-dom",
      "react-router-redux",
      //"react-tap-event-plugin",
      "redux",
      "redux-form",
      "typescript",
      "typesafe-actions"
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
